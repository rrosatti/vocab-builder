<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/dialogDetailedWord_imgLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/portuguese"
            android:layout_weight="1"/>
        
        <TextView
            android:id="@+id/dialogDetailedWord_txtWord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tentar"
            android:layout_weight="3"
            android:textSize="18sp"
            android:layout_gravity="center|center_horizontal"
            android:textAlignment="center"/>
        
    </LinearLayout>

    <TextView
        android:id="@+id/dialogDetailedWord_txtTranslations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Attempt | Try | Seek"
        android:textSize="16sp"
        android:layout_gravity="center|center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        
        <TextView
            android:id="@+id/dialogDetailedWord_txtTotalPlays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total plays: 10"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialogDetailedWord_txtCorrect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Correct: 7"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dialogDetailedWord_txtIncorrect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Incorrect: 3"
            android:layout_weight="1"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/dialogDetailedWord_txtLast5gamesLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last 5 games:"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dialogDetailedWord_txtLast5games"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C - C - C - I - C"
            android:layout_weight="2"
            android:textAlignment="center"/>

    </LinearLayout>


</LinearLayout>