<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_number_of_words"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        
        <RadioGroup
            android:id="@+id/tabPractice_rGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:checkedButton="@+id/tabPractice_rbt_5"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/tabPractice_rbt_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginEnd="10dp"/>

            <RadioButton
                android:id="@+id/tabPractice_rbt_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_marginEnd="10dp"/>

            <RadioButton
                android:id="@+id/tabPractice_rbt_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:layout_marginEnd="10dp"/>

            <RadioButton
                android:id="@+id/tabPractice_rbt_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_marginEnd="10dp"/>

            <RadioButton
                android:id="@+id/tabPractice_rbt_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:layout_marginEnd="10dp"/>

            <RadioButton
                android:id="@+id/tabPractice_rbt_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"/>

        </RadioGroup>

        <Button
            android:id="@+id/tabPractice_btPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_play"
            android:layout_marginTop="60dp"/>

    </LinearLayout>

</RelativeLayout>