<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:padding="4dp">

    <ImageView
        android:id="@+id/customSpinnerItem_imgFlag"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/german"/>

    <TextView
        android:id="@+id/customSpinnerItem_txtLang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="German"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/customSpinnerItem_imgDown"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:src="@drawable/spinner_down"
        android:layout_weight="1"
        android:visibility="gone"/>

</LinearLayout>